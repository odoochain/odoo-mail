<odoo>
    <data>

        <!-- Action for email sent from complete event  -->
        <record model="ir.actions.act_window" id="action_all_email_sent">
            <field name="name">Event Mail Audit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">event.email.audit</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('event_id','=',context.get('active_id'))]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Event Email Reminder Audit Trail
                </p>
                <p>
                    This screen will capture the email created for auto reminder to recipient of the event.
                </p>
            </field>
        </record>

        <!-- Action for all email sent from scheduled lines -->
        <record model="ir.actions.act_window" id="action_schedule_line_emails">
            <field name="name">Event Mail Audit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">event.email.audit</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('event_line_id','=',context.get('active_id'))]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Event Email Reminder Audit Trail
                </p>
                <p>
                    This screen will capture the email created for auto reminder to recipient of the event.
                </p>
            </field>
        </record>


        <record model="ir.ui.view" id="view_event_form">
            <field name="name">partner.event.form</field>
            <field name="model">partner.event</field>
            <field name="arch" type="xml">
                <form string="Events">
                    <header>
                        <button string="Start Event" name="start_event" states="draft" type="object" class="oe_highlight" groups="base.group_user"/>
<!--                        <button string="automated_event_mail" name="automated_event_mail" states="running" type="object" class="oe_highlight" groups="base.group_user"/>-->
                        <button string="Cancel Event" name="button_cancel" states="running" type="object" groups="base.group_user" confirm="Are you sure you want to cancel this event?" />
                        <button string="Re-Run Event" name="start_event" states="cancelled" type="object" class="oe_highlight" groups="base.group_user"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,running,end"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(action_all_email_sent)d" type="action"
                                    class="oe_stat_button">
                                <field name="count_email_sent" widget="statinfo"/>
                            </button>
                            <!--<button name="action_view_delivered"-->
                                <!--type="object"-->
                                <!--class="oe_stat_button">-->
                                <!--<field name="opened" string="Opened" widget="percentpie"/>-->
                            <!--</button>-->
                        </div>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Autoresponder Name"/></h1>
                            <field name="is_online" groups="base.group_no_one"/>
                            <label for="is_online" string="Online" groups="base.group_no_one"/>
                        </div>
                        <group>
                            <group>
                                <field name="organizer_id"/>
                                <field name="address_id"
                                    attrs="{'invisible': [('is_online', '=', True)]}"
                                    context="{'show_address': 1}"
                                    options='{"always_reload": True}'/>
                                <field name="user_id"/>
                                <field name="contact_domain_count" invisible="1"/>
                                <field name="today_event_mail_count" invisible="1"/>
                                <field name="all_event_mail_count" invisible="1"/>
                            </group>
                            <group>
                                <field name="category"/>
                                <field name="creation_date"/>
                                <field name="date_begin"/>
                                <field name="date_end"/>
                            </group>
                        </group>
                        <group>
                            <field name="contact_domain" widget="domain" options="{'model' : 'res.partner'}"/>
                        </group>
                        <notebook>
                            <page string="Email Schedule" name="email_schedule_id">
                                <field name="email_schedule_ids">
                                    <tree string="Email Schedule" editable="bottom">
                                        <field name="template_id" />
                                        <field name="name" />
                                        <field name="interval_nbr"/>
                                        <field name="interval_unit"/>
                                        <field name="interval_type"/>
                                        <field name="ir_model_field"/>
                                        <field name="sent"/>
                                        <field name="delivered"/>
                                        <field name="opened"/>
                                        <field name="clicked"/>
                                        <field name="contact_ids" widget="many2many_tags" invisible="1"/>
                                        <button type="action" name="%(action_schedule_line_emails)d"
                                                class="fa fa-envelope"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_event_tree">
            <field name="name">partner.event.tree</field>
            <field name="model">partner.event</field>
            <field name="arch" type="xml">
                <tree string="Events" decoration-bf="message_needaction==True">
                    <field name="name"/>
                    <field name="category"/>
                    <field name="date_begin"/>
                    <field name="date_end"/>
                    <field name="user_id"/>
                    <field name="state"/>
                    <field name="message_needaction" invisible="1"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="view_event_kanban">
            <field name="name">partner.event.kanban</field>
            <field name="model">partner.event</field>
            <field name="arch" type="xml">
                <kanban class="o_customer_event_kanban_view">
                    <field name="user_id"/>
                    <field name="country_id"/>
                    <field name="date_begin"/>
                    <field name="date_end"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                                <div class="o_dropdown_kanban dropdown">

                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.deletable">
                                            <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                        </t>
                                        <ul class="oe_kanban_colorpicker" data-field="color" role="menu"/>
                                    </div>
                                </div>
                                <div class="o_event_right">
                                    <b><span class="o_kanban_record_title"><field name="name"/></span></b>
                                    <p>
                                        <h4 class="o_kanban_record_title"><b>Count of Sample: </b><field name="contact_domain_count"/></h4>
                                    </p>
                                    <p>
                                        <h4 class="o_kanban_record_title"><b>Emails Sent: </b><field name="today_event_mail_count"/></h4>
                                    </p>
                                    <p>
                                        <h4 class="o_kanban_record_title"><b>Emails Sent Totally: </b><field name="all_event_mail_count"/></h4>
                                    </p>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_dialogue_event">
            <field name="name">Autoresponder</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">partner.event</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new event
                </p>
                <p>
                    Schedule and organize your events efficiently:
                    track registrations and participations, automate the confirmation emails, sell tickets, etc.
                </p>
            </field>
        </record>

        <menuitem id="dialogue_event_id" name="Autoresponder" action="action_dialogue_event" sequence="1"
                  parent="mail_autoresponder.customer_dialogue_menu_id"/>

    </data>
</odoo>
