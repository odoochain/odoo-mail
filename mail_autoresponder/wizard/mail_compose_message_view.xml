<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Email compose wizard to load new body field with HTML -->
    <record model="ir.ui.view" id="email_compose_wiz">
      <field name="name">mail.compose.message.form</field>
      <field name="model">mail.compose.message</field>
      <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='body']" position="replace">
            <field name="body" class="o_mail_body" widget="html_frame" options="{'style-inline': true,
            'editor_url': '/mass_mailing/field/email_template'}"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
