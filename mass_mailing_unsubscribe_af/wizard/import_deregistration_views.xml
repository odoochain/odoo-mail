<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="import_deregistration_form_view" model="ir.ui.view">
            <field name="name">import.deregistration.form.view</field>
            <field name="model">import.deregistration.file</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="filename" invisible="1"/>
                        <field name="file" filename="filename"/>
                    </group>
                    <h2>Import file with following format:</h2>
                    <br/>
                    <button name="download_xls_file" string="Download Sample Excel Format"
                            type="object" class="oe_highlight"/>
                    <field name="dwnld_xls_filename" invisible="1"/>
                    <field name="dwnld_xls_file" filename="dwnld_xls_filename" readonly="1"/>
                    <table class="table table-bordered" width="50%">
                        <thead>
                            <th>Email</th>
                            <th>Date</th>
                            <th>Reason</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>test1@gmail.com</td>
                                <td>2021-06-01 12:42:02</td>
                                <td>I no longer want to receive these emails</td>
                            </tr>
                            <tr>
                                <td>test2@gmail.com</td>
                                <td>2021-06-02 13:42:02</td>
                                <td>I'm not interested</td>
                            </tr>
                            <tr>
                                <td>aa@gmail.com</td>
                                <td>2021-05-01 14:40:02</td>
                                <td>I did not request this</td>
                            </tr>
                            <tr>
                                <td>bb@gmail.com</td>
                                <td>2021-04-25 13:00:02</td>
                                <td>I get too many emails</td>
                            </tr>
                        </tbody>
                    </table>
                    <button name="download_csv_file" string="Download Sample CSV Format"
                            type="object" class="oe_highlight"/>
                    <field name="dwnld_csv_filename" invisible="1"/>
                    <field name="dwnld_csv_file" filename="dwnld_csv_filename" readonly="1"/>
                    <br/>
                    email,date,reason
                    <br/>
                    test1@gmail.com,2021-06-01 12:42:02,I no longer want to receive these emails
                    <br/>
                    test2@gmail.com,2021-05-01 14:07:08,I did not request this
                    <br/>
                    aa@gmail.com,2021-05-30 17:30:00,I'm not interested
                    <br/>
                    bb@gmail.com,2021-04-01 13:00:02,I get too many emails<br/>
                    <button name="download_txt_file" string="Download Sample Text Format"
                            type="object" class="oe_highlight"/>
                    <field name="dwnld_txt_filename" invisible="1"/>
                    <field name="dwnld_txt_file" filename="dwnld_txt_filename" readonly="1"/>
                    <br/>
                    email,date,reason
                    <br/>
                    test1@gmail.com,2021-06-01 12:42:02,I no longer want to receive these emails
                    <br/>
                    test2@gmail.com,2021-05-01 14:07:08,I did not request this
                    <br/>
                    aa@gmail.com,2021-05-30 17:30:00,I'm not interested
                    <br/>
                    bb@gmail.com,2021-04-01 13:00:02,I get too many emails

                    <footer>
                        <button string="Import" name="import_data" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_import_deregistration" model="ir.actions.act_window">
            <field name="name">Deregistration</field>
            <field name="res_model">import.deregistration.file</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <menuitem name="Deregistration" id="menu_import_deregistration"
                  action="action_import_deregistration" parent="mass_mailing.mass_mailing_menu_root"/>
    </data>
</odoo>