<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="import_knime_export_wizard_form_view" model="ir.ui.view">
            <field name="name">import.knime.export.wizard.form.view</field>
            <field name="model">import.knime.export.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="filename" invisible="1"/>
                        <field name="file" filename="filename"/>
                    </group>
                    <br/><br/>
                    <h2>Import file with following format:</h2>
                    <br/>
                    <group class="oe_left">
                        <field name="dwnld_xls_filename" invisible="1"/>
                        <field name="dwnld_xls_file" filename="dwnld_xls_filename" readonly="1"/>
                        <button name="download_xls_file" string="Download Sample Excel Format" type="object" class="oe_highlight"/>
                        <br/>
                        <field name="dwnld_csv_filename" invisible="1"/>
                        <field name="dwnld_csv_file" filename="dwnld_csv_filename" readonly="1"/>
                        <button name="download_csv_file" string="Download Sample CSV Format" type="object" class="oe_highlight"/>
                        <br/>
                        <field name="dwnld_txt_filename" invisible="1"/>
                        <field name="dwnld_txt_file" filename="dwnld_txt_filename" readonly="1"/>
                        <button name="download_txt_file" string="Download Sample Text Format" type="object" class="oe_highlight"/>
                    </group>
                    <footer>
                        <button string="Import" name="import_data" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="import_knime_export_wizard_action">
            <field name="name">Import logs</field>
            <field name="res_model">import.knime.export.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
        <menuitem id="menu_import_knime_export_wizard"
                  name="Import"
                  action="import_knime_export_wizard_action"
                  parent="mass_mailing_autoresponder.customer_dialogue_menu_id"
        />
    </data>
</odoo>
