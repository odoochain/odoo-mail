<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Customer Dialogue Scheduler-->
        <record model="ir.cron" forcecreate="True" id="customer_dialogue_event_mail_scheduler">
            <field name="name">Autoresponder: Mail Scheduler</field>
            <field name="model_id" ref="model_partner_event"/>
            <field name="state">code</field>
            <field name="code">model.automated_autoresponder_mail()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
        </record>

        <!-- Move the event state to end-->
        <record model="ir.cron" forcecreate="True" id="event_close_when_end">
            <field name="name">Autoresponder : Update Autoresponder status to end when it finished.</field>
            <field name="model_id" ref="model_partner_event"/>
            <field name="state">code</field>
            <field name="code">model.update_autoresponder_status()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
        </record>

    </data>
</odoo>
