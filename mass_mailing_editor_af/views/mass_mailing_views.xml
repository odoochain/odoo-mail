<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="inherit_mail_mass_mailing_internal_name">
        <field name="name">inherit.mail.mass.mailing.internal.name</field>
        <field name="model">mail.mass_mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/label[@for='name']" position="before">
                    <label for="internal_name" string="Internal Name" id="internal_name_label"/>
                    <div>
                        <field name="internal_name" id="internal_name_field"/>
                    </div>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="inherit_view_mail_mass_mailing_kanban">
        <field name="name">inherit.mail.mass_mailing.kanban</field>
        <field name="model">mail.mass_mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_kanban"/>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <field name="internal_name"/>
            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="inherit_view_mail_mass_mailing_tree">
        <field name="name">inherit.mail.mass_mailing.tree</field>
        <field name="model">mail.mass_mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <field name="internal_name"/>
            </field>
        </field>
    </record>

    <record id="view_mail_mass_mailing_confirm_send" model="ir.ui.view">
        <field name="name">mail_mass_mailing_confirm_send</field>
        <field name="model">send.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Send Mass Mailing">
                <field name="message"/>
                <footer>
                    <button string="Send Mail" name="send_confirm" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mass_mailing_confirm_send" model="ir.actions.act_window">
        <field name="name">Send Mails Confirmation</field>
        <field name="res_model">send.confirm.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_mail_mass_mailing_confirm_send"/>
        <field name="target">new</field>
    </record>

    <record model="ir.ui.view" id="inherit_view_mail_mass_mailing_form">
        <field name="name">inherit.mail.mass_mailing.mass_mailing_form</field>
        <field name="model">mail.mass_mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_form"/>
        <field name="arch" type="xml">
            <button name="put_in_queue" position="attributes">
                <attribute name="confirm"/>
                <attribute name="id">put_in_queue_id</attribute>
                <attribute name="type">action</attribute>
                <attribute name="name">%(action_mass_mailing_confirm_send)d</attribute>
            </button>
        </field>
    </record>
</odoo>
