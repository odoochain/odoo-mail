<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

        <!-- Format report -->
    <record id="paperformat_euro_landscape"
        model="report.paperformat">
        <field name="name">European A4 Landscape</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">14</field>
        <field name="margin_bottom">7</field>
        <field name="margin_left">21</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>
   

    <!-- Report calls ir.actions.report.xml -->
    <report id="action_assigned_coach_report" 
        string="Välkomstbrev till deltagare DAFA"
        model="outplacement" report_type="qweb-pdf" 
        name="mail_outplacement_report.report_assigned_coach_template"
        file="mail_outplacement_report.report_assigned_coach_template"
        paperformat="paperformat_euro_landscape" 
    />


    <template id="report_assigned_coach_template">
        <t t-call="web.html_container">
            <!-- <t t-call="web.external_layout"> -->
                <t t-foreach="docs" t-as="o">
                    <t t-set="o" t-value="o.with_context(lang=lang)" />
                    <div class="page" style="margin:0; padding:0; width: 100%;"> 
                        <style>
                            p {
                                margin: 0 0 1.15em;
                            }
                            .adress {
                                font: Arial; 
                                color: black; 
                                font-size: 12px; 
                                padding:0px; 
                                margin: 0px;
                                margin-bottom: 100px;
                                width: 100%; 
                                float: left;
                              }
                            .sender {
                                padding:0px; 
                                margin-top: 17px; 
                                margin-left: 10px; 
                                width: 30%; 
                                float: left;
                              }
                            .receiver {
                                padding: 0px; 
                                margin-top: 120px;
                                margin-left: 170px; 
                                width: 30%; 
                                float: left;
                            }
                    </style>

                            <!-- Adress Box  -->
                            <div class="adress" style="" >
                                <!-- Avsändaradress  --> 
                                <div class="sender" style="">
                                    <span t-esc="o.employee_id.address_id.name"/><br/>
                                    <span t-esc="o.employee_id.address_id.street"/><br/>
                                    <span t-esc="o.employee_id.address_id.city"/>
                                    <span t-esc="o.employee_id.address_id.zip"/><br/>
                                </div>

                                <!-- Mottagaradress -->
                                <div class="receiver" style="" >   
                                    <span t-esc="o.name"/><br/>
                                    <span t-esc="o.partner_street"/><br/>
                                    <span t-esc="o.partner_zip"/>
                                    <span t-esc="o.partner_city"/><br/>
                                </div>
                            </div> 
                            <div class="" style="margin-top: 70px;">
                                <br/><br/>
                                <h3>Välkomstbrev DAFA</h3>
                            
                                <p>
                                    Hej <span t-esc="o.name"/>!
                                </p>

                                <p>
                                    <span t-esc="o.employee_id.name"/> är din handledare och du är välkommen till oss 
                                     klockan <t t-esc="'%02d:%02d' % (int(o.time), o.time % 1 * 60)" /> den <span t-esc="o.date"/>
                                     <t t-if="o.performing_operation_adress ">
                                        på plats
                                           <span t-esc="o.performing_operation_adress.street"/>, 
                                           <span t-esc="o.performing_operation_adress.city"/> 
                                           <span t-esc="o.performing_operation_adress.zip"/>
                                    </t>.
                                           
                                     Ta med dig en kopia på dina intyg, ID-handlingar och glatt humör.
                                </p>
                                 
                                 


                                <p> 
                                    Anteckningsmaterial finns på plats. 
                                </p>
                                <p style="">
                                    Hälsningar <br/>
                                    <span t-esc="o.employee_id.address_id.name"/><br/>
                                </p>
                              
                            </div> 
                        </div>
                </t>
            </t>
        <!-- </t> -->
    </template>

</odoo>
