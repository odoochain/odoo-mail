<odoo>
    <data>
        <!-- Assigned coach -->
        <record id="email_template_assigned_coach" model="mail.template">
            <field name="name">Välkomstmail till deltagare DAFA</field>
            <field name="model_id" ref="outplacement.model_outplacement"/>
            <field name="subject">Välkomstbrev till deltagare DAFA</field>
            <field name="email_to">${object.partner_email | safe}</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        Hej ${object.partner_name or ''}!
                    </p>
                    <p>
                        <strong>${object.employee_id.name or ''}</strong>
                        är din handledare och du är välkommen till oss.
                        Ta med dig en kopia på dina intyg, ID-handlingar och glatt humör. Se bifogad brev för tid och
                        plats.
                    </p>
                    <p>
                        Anteckningsmaterial finns på plats.
                    </p>
                    <p>
                        Hälsningar
                        <br/>
                        ${object.performing_operation_id.name or ''}
                    </p>
                </div>
            </field>
            <field name="user_signature" eval="False"/>
            <!--  Field below is for future use  -->
            <!-- <field name="lang">${object.partner_id.lang}</field> -->
            <field name="auto_delete" eval="False"/>
            <field name="report_template" ref="mail_outplacement_report.action_assigned_coach_report"/>
            <field name="report_name">Välkomstbrev till deltagare DAFA - Ebrev</field>
        </record>
    </data>
</odoo>
