<odoo>
    <data>

        <record model="ir.ui.view" id="view_event_form">
            <field name="name">partner.event.form</field>
            <field name="model">partner.event</field>
            <field name="inherit_id" ref="mail_autoresponder.view_event_form"/>
            <field name="arch" type="xml">
                <field name="contact_domain" position="replace">
                    <field name="contact_domain" widget="domain" options="{'model' : 'res.partner'}"/>
                </field>
            </field>
        </record>

        <menuitem id="mail_autoresponder.customer_dialogue_menu_id" name="Autoresponder" action="mail_autoresponder.action_dialogue_event"
                  sequence="1"
                  groups="af_security.af_newsletter_automatic"/>
        />
        <menuitem id="mail_autoresponder.dialogue_event_id" name="Autoresponder" action="mail_autoresponder.action_dialogue_event"
                  sequence="1"
                  parent="mail_autoresponder.customer_dialogue_menu_id"
                  groups="af_security.af_newsletter_automatic"/>
        />
                
    </data>
</odoo>
